{
	"env": {
		"node": true,
		"es6": true
	},

	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},

	"extends": "eslint:recommended",

	"ignorePatterns": ["modules.js"],

	"rules": {
		"comma-dangle" : [
			"error",
			"always-multiline"
		],
		"eol-last": [
			"error",
			"always"
		],
		"eqeqeq": "error",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase" : 1
			}
		],
		"init-declarations": [
			"error",
			"always"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-eval": "error",
		"no-implied-eval": "error",
		"no-inner-declarations": "off",
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],
		"no-prototype-builtins": "off",
		"no-trailing-spaces": "error",
		"no-unsafe-optional-chaining" : "error",
		"no-use-before-define": [
			"error",
			{
				"functions": false,
				"classes": false,
				"variables": true
			}
		],
		"no-useless-return": "error",
		"no-var": "error",
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"space-before-blocks" : "error",
		"strict": [
			"error",
			"global"
		]
	}
}
